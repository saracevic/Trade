# Trade Scanner Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=Trade Scanner
APP_VERSION=2.0.0
DEBUG=false
ENVIRONMENT=production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

# API Keys - Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# API Keys - Coinbase
COINBASE_API_KEY=
COINBASE_API_SECRET=

# API Keys - Kraken
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Scanner Settings
MIN_VOLUME=1000.0
MIN_PRICE=0.00001
ENABLED_EXCHANGES=binance,coinbase,kraken

# Cache Settings
CACHE_ENABLED=true
CACHE_TIMEOUT=3600

# Request Settings
MAX_RETRIES=3
REQUEST_TIMEOUT=30
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
